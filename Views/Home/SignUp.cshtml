<!DOCTYPE html>
<html lang="en">
@{
    ViewData["Title"] = "SignUp";
}

<body class="bg-light">
    <div class="container-lg" style="padding-top:50px">
        <div class="card" style="width: 100%">
            <div class="card-header">
                <div class="text-center">
                    <h2 class="text-center pt-3">SignUp Now</h2>
                    <p class="text-center text-muted lead">It's Free and Takes a Minute</p>
                </div>
            </div>
            <div class="col-lg-4 bh bg-white m-auto" style="padding-top:25px">
                <!-- Form star -->
                <form action="#">
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                        <input type="text" class="form-control" placeholder="First Name"/>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                        <input type="text" class="form-control" placeholder="Last Name" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                        <input type="text" class="form-control" placeholder="Email" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        <input type="text" class="form-control" placeholder="Password" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        <input type="text" class="form-control" placeholder="Confirm Password" />
                    </div>
                    <div class="d-grid">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#SignUpModal">SignUp Now</button>
                        <p class="text-center text-muted mt-2">
                            When you register by Clicking SignUp Button, You Agree to our
                            <a href="#"> Terms and Conditions</a> and <a href="/Home/Privacy">Privacy Policy</a>
                        </p>
                        <p class="text-center text-muted mt-2">
                            Already Have an Account?
                            <a href="/Home/LogIn">Login Here</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="SignUpModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="SignUpModal">Register succesful!</h5>
                </div>
                <div class="modal-body">
                    Your uniquely generated password is: 56&*(4932!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>