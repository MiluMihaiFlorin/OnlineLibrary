@model IEnumerable<OnlineLibrary.Models.DBEntities.Category>

@{
    ViewData["Title"] = "Index";
}

@section Scripts{
    <script type="text/javascript">
        function populateTable(){
            var dataToSend = {
                statusType: $("#statusTypeSelect").val()
            };

            $.ajax({
                url: "Categories/GetCategoryByType",
                type: "GET",
                data: dataToSend,
                success: function (categoriesResponse){
                    $("#categoryTable").empty();
                    categoriesResponse.forEach(function(element)){
                        $("#categoryTable").append()
                    }

                },


            })
        }
    </script>
}

<h1 style="padding:30px; color:dimgray">
    Manage Categories
</h1>
<div class="container" style="padding:20px">
    <div class="row">
        <div class="col-sm-3.ml-md-auto">
            @using (Html.BeginForm())
            {
                <p>
                    @Html.TextBox("SearchString")
                    <input type="submit" value="Search"/>
                </p>
            }
        </div>
    </div>
    <div class="row align-items-end">
        <div class="col-sm-2 ">
            <label>Status</label>
            <label class="select">
                <select id="statusTypeSelect">
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                    <option value="all">All</option>
                </select>
            </label>
        </div>
    </div>

</div>
<table class="table table-striped" id="categoryTable">
    <thead>
        <tr>

            <th scope="col">#</th>
            <th scope="col">Category</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th></th>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @if (item.IsActive == true)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }

                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-primary fa fa-circle-info" type="button"></a>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-success fa fa-pencil-square" type="button" ></a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger fa fa-trash-alt" type="button"></a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>
<nav>
    <ul class="pagination justify-content-end">
        <li class="page-item disabled">
            <span class="page-link">Previous</span>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item active" aria-current="page">
            <span class="page-link">2</span>
        </li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>
