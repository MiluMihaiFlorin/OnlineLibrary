@model IEnumerable<OnlineLibrary.Models.DBEntities.Category>

@{
    ViewData["Title"] = "Index";
}

@section Scripts{
    <script type="text/javascript">
        function populateTable(){
            var dataToSend = {
                locationType: $("#statusTypeSelect").val()
            };

            $.ajax({
                url: "/Categories/GetCategoriesWithStatus",
                type: "GET",
                data: dataToSend,
                success: function (categoriesResponse) {
                    $("#categoryTableContent").empty();
                    categoriesResponse.forEach(function(element))
                    {   if(element.IsActive == true)
                        {
                            $('#categoryTableContent').append(
                                  "<tr>"
                                +   "<td>" + element.Name + "</td>"
                                +   "<td>" + "<span class=\"badge bg-success\" > Active < /span>" + "</td > "
                                +   "<td>" 
                                +       " <a asp - action=\"Details\" asp - route - id=\""+element.CategoryId+"\" class= \"btn btn-primary fa fa-circle-info\" type = \"button\" > </a>
                                +       " <a asp - action=\"Edit\" asp - route - id=\"" + element.CategoryId + "\" class= \"btn btn-success fa fa-pencil-square\" type = \"button\" > </a>
                                + " <a asp - action=\"Details\" asp - route - id=\"" + element.CategoryId + "\" class= \"btn btn-danger fa fa-trash-alt\" type = \"button\" > </a>"
                                +   "</td>"
                                +"</tr>"
                                )
                        }
                        if else (element.IsActive == false)
                        {
                            $('#categoryTableContent').append(
                                "<tr>"
                                + "<td>" + element.Name + "</td>"
                                + "<td>" + "<span class=\"badge bg-danger\" > Inactive < /span>" + "</td > "
                                + "<td>"
                                + " <a asp - action=\"Details\" asp - route - id=\"" + element.CategoryId + "\" class= \"btn btn-primary fa fa-circle-info\" type = \"button\" > </a>
                                + " <a asp - action=\"Edit\" asp - route - id=\"" + element.CategoryId + "\" class= \"btn btn-success fa fa-pencil-square\" type = \"button\" > </a>
                                + " <a asp - action=\"Details\" asp - route - id=\"" + element.CategoryId + "\" class= \"btn btn-danger fa fa-trash-alt\" type = \"button\" > </a>"
                                + "</td>"
                                + "</tr>"
                            )
                        }
                    }
                },
                error: function () {
                    alert("Error while choosing a status!")
                }
            });
        }

        $("#locationTypeSelect").on('change', populateTable);
        populateTable();

    </script>

}

<h1 style="padding:30px; color:dimgray">
    Manage Categories
</h1>
<div class="container" style="padding:20px">
    <div class="row">
        <div class="col-sm-3.ml-md-auto">
            @using (Html.BeginForm())
            {
                <p>
                    @Html.TextBox("SearchString")
                    <input type="submit" value="Search"/>
                </p>
            }
        </div>
    </div>
    <div class="row align-items-end">
        <div class="col-sm-2 ">
            <label>Status</label>
            <label class="select">
                <select id="statusTypeSelect">
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                    <option value="all">All</option>
                </select>
            </label>
        </div>
    </div>

</div>
<table class="table table-striped">
    <thead>
        <tr>

            <th scope="col">#</th>
            <th scope="col">Category</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody id="categoryTableContent">
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @if (item.IsActive == true)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }

                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-primary fa fa-circle-info" type="button"></a>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-success fa fa-pencil-square" type="button" ></a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger fa fa-trash-alt" type="button"></a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>
